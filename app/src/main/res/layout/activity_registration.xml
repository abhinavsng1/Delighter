<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.delighter.RegistrationActivity"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="319dp"
        android:layout_height="341dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/main3" />

    <EditText
        android:id="@+id/name"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:hint="name"
        android:inputType="text"
        android:layout_gravity="center"
        ></EditText>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RadioButton
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:text="Gay"
            android:layout_gravity="center"></RadioButton>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lesbian"
                android:layout_gravity="center"></RadioButton>
                </RadioGroup>
    <EditText
        android:id="@+id/email"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:hint="email"
        android:inputType="textWebEmailAddress|textEmailAddress"
        android:layout_gravity="center"></EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:layout_gravity="center"

        android:inputType="textWebPassword"></EditText>

    <Button
        android:id="@+id/register"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:background="#C85252"
        android:text="Register"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>